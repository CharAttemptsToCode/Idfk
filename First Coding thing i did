Random dice = new Random();
int roll = dice.Next(1 ,8);
Console.WriteLine($"How many people were shot: {roll}" );
if (roll == 1)
{
    Console.WriteLine("Only 1? You weak asf");
}
else if (roll == 3)
{
    Console.WriteLine("3! Not bad, could do with a few more though");
}
else if (roll == 5)
{
    Console.WriteLine("5! Wtf you actually did good, you almost killed them all");
}
else if (roll ==7)
{
    Console.WriteLine(" Good job you got all the targets, Return to base");
}
if (roll < 8)
{
    int roll2 = dice.Next(1 ,8);
    Console.WriteLine($"Amount of backup guards advancing your position:  {roll}");
}
